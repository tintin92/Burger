<h1>Burger Lab!</h1>

<h2>Create a Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="ca">Name of creation: </label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Satisfy hunger now or later</label><br>
    <input type="radio" name="sleepy" value="1" checked> Save for Later<br>
    <input type="radio" name="sleepy" value="0"> Devour Now
  </div>

  <button type="submit">Add Burger</button>
</form>

<h2>Devoured Burgers!</h2>

<ul>
  {{#each burgers}}
  {{#unless sleepy}}
  {{> burgers/burger-block sleep=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers ready to Devour!</h2>

<ul>
  {{#each burgers}}
  {{#if sleepy}}
  {{> burgers/burger-block sleep=false}}
  {{/if}}
  {{/each}}
</ul>

